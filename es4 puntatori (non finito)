void menÃ¹(int scelta){

switch (scelta)
	{
		case 0:
        Printf("Termina\n");
        break;
		case 1: 
		printf("Mostra contenuto\n");
		break;
		case 2: 
		printf("Inserire elemento\n");
		break;
		case 3: 
		printf("Modifica elemento\n");
		break;
		case 4: 
		printf("Elimina elemento\n");
        eliminaelemento(numeri[]);
		break;
		case 5: 
		printf("Ricerca elemento\n");
		break;
        case 6:
        printf("Inserisci in una certa posizione\n")
        break;
	}
	system("PAUSE");


}
void eliminaelemento(char numeri[SHRT_MAX]){

int i;
int valore;

printf("Inserisci il valore da eliminare\n");
scanf("%d", &valore);
for(i = valore; i < strlen(numeri[SHRT_MAX]); i++){

    numeri[i] = numeri[i + 1];

    
}
return 0;
}

